<%= form_for([@user, @user.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area(:body,:rows=>5) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
