<% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.avatar.url(:thumb) %></td>
    <td><%= user.name %></td>
    <td><%= user.familyName %></td>
    <td><%= user.age %></td>
    <td><%= user.email %></td>
	<td><%= user.userType %></td>
	<td><%= user.comments.length%></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    <td><%= link_to "Show Owned Files", :controller => "uploads", :action => "index", :id => user %></td>
    <td><%= link_to "Show Group Files", :controller => "uploads", :action => "index", :group => user.userType %></td>
    <td><%= link_to "Upload new file", :controller => "uploads", :action => "new", :id => user %></td>
  </tr><br />
<% end %>
