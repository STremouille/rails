<% @user.userTypes.build %>
<%= form_for(@user) do |user_form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= user_form.label :name %><br />
    <%= user_form.text_field :name %>
  </div>
  <div class="field">
    <%= user_form.label :familyName %><br />
    <%= user_form.text_field :familyName %>
  </div>
  <div class="field">
    <%= user_form.label :age %><br />
    <%= user_form.text_field :age %>
  </div>
	<h2>Types</h2>
	<%= render :partial => 'userTypes/form', :locals => {:form => user_form} %>
  <div class="actions">
    <%= user_form.submit %>
  </div>
<% end %>
